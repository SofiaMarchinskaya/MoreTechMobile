<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_button_grey">
    <TextView
        android:id="@+id/step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:fontFamily="@font/semibold"
        android:textColor="#99ABC6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cv"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/step"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:id="@+id/cv">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/aibaba"
                android:id="@+id/image_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                />
            <TextView
                android:id="@+id/title_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/blueBlack"
                android:text="Alibaba"
                android:textSize="17sp"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image_stock"
                app:layout_constraintBottom_toBottomOf="@id/subtitle_stock"/>
            <TextView
                android:id="@+id/subtitle_stock"
                android:layout_width="wrap_content"
                android:text="Test text"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="13sp"
                android:textColor="@color/greyText"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toTopOf="@id/title_stock"
                app:layout_constraintLeft_toRightOf="@id/image_stock"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/deposite"
                android:layout_width="wrap_content"
                android:text="22 650 ã‚¢"
                android:fontFamily="@font/regular"
                android:textSize="17sp"
                android:textColor="@color/green"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="-8dp"
                android:layout_marginTop="-8dp"
                app:layout_constraintTop_toBottomOf="@id/title_stock"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/subtitle_stock"/>
            <TextView
                android:id="@+id/dividents"
                android:layout_width="wrap_content"
                android:text="Test text"
                android:fontFamily="@font/regular"
                android:textSize="12sp"
                android:textColor="@color/green"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="-8dp"
                android:layout_marginTop="-8dp"
                app:layout_constraintTop_toBottomOf="@id/deposite"
                app:layout_constraintRight_toRightOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@id/sell"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv" />
    <Button
        android:id="@+id/sell"
        style="@style/come_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="24dp"
        android:paddingHorizontal="28dp"
        android:paddingVertical="14dp"
        android:text="@string/sell"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/graph"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/hold" />

    <Button
        android:id="@+id/hold"
        style="@style/reg_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:paddingHorizontal="28dp"
        android:paddingVertical="14dp"
        android:layout_marginTop="40dp"
        android:text="@string/hold"
        app:layout_constraintTop_toBottomOf="@id/graph"
        app:layout_constraintLeft_toRightOf="@id/sell"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>