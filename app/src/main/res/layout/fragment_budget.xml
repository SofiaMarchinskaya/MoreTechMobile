<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_button_grey"
    tools:context=".BudgetFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/image_on_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:src="@drawable/ic_empty_wallet"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/title_on_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Test text"
                        android:fontFamily="@font/semibold"
                        android:textColor="@color/blueBlack"
                        android:textSize="22sp"
                        android:layout_marginTop="14dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/image_on_card"
                        />
                    <TextView
                        android:id="@+id/subtitle_on_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Test text"
                        android:fontFamily="@font/regular"
                        android:textColor="@color/greyText"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/title_on_card"
                        />
                    <TextView
                        android:id="@+id/price_on_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:background="@drawable/rounded_button_grey"
                        android:paddingVertical="3dp"
                        android:paddingHorizontal="12dp"
                        android:textColor="#99ABC6"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/semibold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/happy_on_card"
                        app:layout_constraintTop_toBottomOf="@id/subtitle_on_card"
                        />
                    <TextView
                        android:id="@+id/happy_on_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:paddingVertical="3dp"
                        android:layout_marginTop="8dp"
                        android:paddingHorizontal="12dp"
                        android:textColor="#99ABC6"
                        android:background="@drawable/rounded_button_grey"
                        android:fontFamily="@font/semibold"
                        app:layout_constraintLeft_toRightOf="@id/price_on_card"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/subtitle_on_card"
                        android:layout_marginBottom="32dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                    <View
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_marginTop="8dp"
                        android:id="@+id/tick_square"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginEnd="10dp"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/ic_tick_square"
                        app:layout_constraintLeft_toRightOf="@id/happy_on_card"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/subtitle_on_card"
                        />
                    <View
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_marginTop="8dp"
                        android:id="@+id/close_square"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/ic_close_square"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/price_on_card"
                        app:layout_constraintTop_toBottomOf="@id/subtitle_on_card"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_weight="1"
                    android:id="@+id/stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/reg_button"
                    android:text="@string/learn"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginBottom="30dp"
                    android:minHeight="34dp"
                    android:layout_marginLeft="24dp"
                    android:minWidth="100dp"
                    >

                </Button>
                <Button
                    android:layout_weight="1"
                    android:id="@+id/vklad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/grey_rounded_border_button_style"
                    android:text="@string/stah"
                    android:textSize="14sp"
                    android:paddingVertical="8dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginBottom="30dp"
                    android:minHeight="34dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:minWidth="100dp"
                    >

                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_margin="16dp"
                    android:padding="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <View
                        android:id="@+id/bank"
                        android:layout_width="30dp"
                        android:layout_height="30.17dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/ic_bank"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="16dp"
                        />
                        <TextView
                            android:id="@+id/kurs"
                            android:layout_width="146dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:text="Курсы повышения квалификации"
                            android:lineSpacingExtra="1sp"
                            android:translationY="-0.57sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/semibold"
                            android:gravity="center_horizontal|top"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginStart="16dp"
                            android:textSize="14sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/bank"
                            />
                        <TextView
                            android:id="@+id/sutitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="1dp"
                            android:text="5-7% к зарплате"
                            android:textSize="11sp"
                            android:textColor="#99ABC6"
                            android:lineSpacingExtra="0sp"
                            android:gravity="center_horizontal|top"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/kurs"
                            />
                        <Button
                            android:id="@+id/pay"
                            android:layout_width="120dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="16dp"
                            style="@style/reg_button"
                            android:text="455 650 ₽ "
                           android:layout_marginBottom="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/sutitle"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_margin="16dp"
                    android:padding="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <View
                            android:id="@+id/bank1"
                            android:layout_width="30dp"
                            android:layout_height="30.17dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/ic_bank"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="16dp"
                            />
                        <TextView
                            android:id="@+id/kurs1"
                            android:layout_width="146dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:text="Курсы повышения квалификации"
                            android:lineSpacingExtra="1sp"
                            android:translationY="-0.57sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/semibold"
                            android:gravity="center_horizontal|top"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginStart="16dp"
                            android:textSize="14sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/bank1"
                            />
                        <TextView
                            android:id="@+id/sutitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="1dp"
                            android:text="5-7% к зарплате"
                            android:textSize="11sp"
                            android:textColor="#99ABC6"
                            android:lineSpacingExtra="0sp"
                            android:gravity="center_horizontal|top"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/kurs1"
                            />
                        <Button
                            android:id="@+id/pay1"
                            android:layout_width="120dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="16dp"
                            style="@style/reg_button"
                            android:text="455 650 ₽ "
                            android:layout_marginBottom="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/sutitle1"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_margin="16dp"
                android:padding="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <View
                        android:id="@+id/bank2"
                        android:layout_width="30dp"
                        android:layout_height="30.17dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/ic_bank"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="16dp"
                        />
                    <TextView
                        android:id="@+id/kurs2"
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="Курсы повышения квалификации"
                        android:lineSpacingExtra="1sp"
                        android:translationY="-0.57sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/semibold"
                        android:gravity="center_horizontal|top"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:textSize="14sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/bank2"
                        />
                    <TextView
                        android:id="@+id/sutitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="1dp"
                        android:text="5-7% к зарплате"
                        android:textSize="11sp"
                        android:textColor="#99ABC6"
                        android:lineSpacingExtra="0sp"
                        android:gravity="center_horizontal|top"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/kurs2"
                        />
                    <Button
                        android:id="@+id/pay2"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="16dp"
                        style="@style/reg_button"
                        android:text="455 650 ₽ "
                        android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/sutitle2"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>