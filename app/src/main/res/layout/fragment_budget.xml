<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BudgetFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/image_on_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:src="@drawable/ic_empty_wallet"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/title_on_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Test text"
                        android:fontFamily="@font/semibold"
                        android:textColor="@color/blueBlack"
                        android:textSize="22sp"
                        android:layout_marginTop="14dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/image_on_card"
                        />
                    <TextView
                        android:id="@+id/subtitle_on_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Test text"
                        android:fontFamily="@font/regular"
                        android:textColor="@color/greyText"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/title_on_card"
                        />
                    <TextView
                        android:id="@+id/price_on_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:background="@drawable/rounded_button_grey"
                        android:paddingVertical="3dp"
                        android:paddingHorizontal="12dp"
                        android:textColor="#99ABC6"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/semibold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/happy_on_card"
                        app:layout_constraintTop_toBottomOf="@id/subtitle_on_card"
                        />
                    <TextView
                        android:id="@+id/happy_on_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:paddingVertical="3dp"
                        android:layout_marginTop="8dp"
                        android:paddingHorizontal="12dp"
                        android:textColor="#99ABC6"
                        android:background="@drawable/rounded_button_grey"
                        android:fontFamily="@font/semibold"
                        app:layout_constraintLeft_toRightOf="@id/price_on_card"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/subtitle_on_card"
                        android:layout_marginBottom="32dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                    <View
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_marginTop="8dp"
                        android:id="@+id/tick_square"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginEnd="10dp"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/ic_tick_square"
                        app:layout_constraintLeft_toRightOf="@id/happy_on_card"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/subtitle_on_card"
                        />
                    <View
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_marginTop="8dp"
                        android:id="@+id/close_square"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/ic_close_square"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/price_on_card"
                        app:layout_constraintTop_toBottomOf="@id/subtitle_on_card"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>