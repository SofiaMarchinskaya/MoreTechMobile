<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="reg_button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_button_blue</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="reg_button_down">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_button_blue_active</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="come_button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:background">@drawable/rounded_button_white</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="grey_rounded_button_style">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#99ABC6</item>
        <item name="android:background">@drawable/rounded_button_grey</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="grey_rounded_border_button_style">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#99ABC6</item>
        <item name="android:background">@drawable/rounded_button_grey_border</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="edit_text">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#889099</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>
    <style name="bold_num">
        <item name="android:fontFamily">@font/semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>